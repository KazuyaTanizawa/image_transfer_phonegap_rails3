  <tr>
    <td><%= product.ptitle %></td>
    <td><%= product.pimage %>
		<div id="image1">
			<a href= "<%= "/images/" + product.pimage  %>">
				<img alt="" height ="100" width = "100" src = "<%= "/images/" + product.pimage %>">
